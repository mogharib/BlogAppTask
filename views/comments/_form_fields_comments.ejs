<div class="form-group">
  <label for="title">User Name</label>
  <input required value="<%= comment.username %>" type="text" name="username" id="username" class="form-control">
</div>
<div class="form-group">
  <label for="title">Post Id</label>
  <input required value="<%= comment.postId %>" type="text" name="postId" id="postId" class="form-control">
</div>
<div class="form-group">
  <label for="description">Comment</label>
  <textarea name="description" id="description" class="form-control"><%= comment.description %></textarea>
</div>

<a href="/api" class="btn btn-secondary">Cancel</a>
<button type="submit" class="btn btn-primary">Add Comment</button>